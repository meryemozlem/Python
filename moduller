import turtle

bilgin=turtle.Turtle()
#turtle modül Kaplumbağa kütüphanesi. Turtle fonksiyon. bilgin isimli kaplumbağa.
for i in range(4):
    bilgin.forward(50)
    bilgin.right(90)



import turtle

ekran=turtle.Screen
ekran.setup(400,400)
ekran.bgpic("space.png")

ekran.addshape("rocketship.png")
turtle.shape("rocketship.png")

hareket_et=10

def ileri():
  turtle.forward(hareket_et)

def sol():
  turtle.left(hareket_et)

def geri():
  turtle.backward(hareket_et)

def sag():
  turtle.right(hareket_et)

ekran.onkey(ileri,"Up")
ekran.onkey(geri,"Down")
ekran.onkey(sol,"Left")
ekran.onkey(sag,"Right")
ekran.listen()
